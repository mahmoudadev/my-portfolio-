<h1> Create a new Portfolio Item</h1>

<%= form_for @portfolio do |f| %>

  <div class="field">
    <p>  <%= f.label :title %> </p>
    <p>  <%= f.text_field :title %> </p>
  </div>

  <div class="field">
    <p>  <%= f.label :subtitle %> </p>
    <p>  <%= f.text_field :subtitle %> </p>
  </div>

  <div class="field">
    <p>  <%= f.label :body %> </p>
    <p>  <%= f.text_area :body %> </p>
  </div>


  <div class="actions">
    <p>  <%= f.submit%> </p>
  </div>




<% end %>